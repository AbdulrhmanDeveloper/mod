LOCAL_PATH := $(call my-dir)

# ──────────────────────────────
# Prebuilt Keystone (STATIC)
# ──────────────────────────────
include $(CLEAR_VARS)
LOCAL_MODULE := keystone
LOCAL_SRC_FILES := KittyMemory/Deps/Keystone/libs-android/arm64-v8a/libkeystone.a
include $(PREBUILT_STATIC_LIBRARY)

# ──────────────────────────────
# Main shared library (SSPP)
# ──────────────────────────────
include $(CLEAR_VARS)
LOCAL_MODULE := SSPP

# ── Flags ──
LOCAL_CFLAGS := -w -s -fvisibility=hidden -fpermissive
LOCAL_CPPFLAGS := -w -s -std=c++17 -fvisibility=hidden -fpermissive
LOCAL_LDFLAGS += -Wl,--gc-sections,--strip-all
LOCAL_LDLIBS := -llog -landroid -lEGL -lGLESv2

# Disable fortify (احتياطي)
LOCAL_CFLAGS += -U_FORTIFY_SOURCE -D_FORTIFY_SOURCE=0
LOCAL_CPPFLAGS += -U_FORTIFY_SOURCE -D_FORTIFY_SOURCE=0
LOCAL_CONLYFLAGS += -U_FORTIFY_SOURCE -D_FORTIFY_SOURCE=0

# ── Includes ──
LOCAL_C_INCLUDES += $(LOCAL_PATH)
LOCAL_C_INCLUDES += $(LOCAL_PATH)/Includes
LOCAL_C_INCLUDES += $(LOCAL_PATH)/Dobby

# ── Sources (مش ناسي ولا ملف) ──
LOCAL_SRC_FILES := \
    Main.cpp \
    Menu/Jni.cpp \
    Menu/Menu.cpp \
    Menu/Setup.cpp \
    Includes/Utils.cpp \
    Substrate/hde64.c \
    Substrate/SubstrateDebug.cpp \
    Substrate/SubstrateHook.cpp \
    Substrate/SubstratePosixMemory.cpp \
    Substrate/SymbolFinder.cpp \
    KittyMemory/KittyArm64.cpp \
    KittyMemory/KittyScanner.cpp \
    KittyMemory/KittyMemory.cpp \
    KittyMemory/KittyUtils.cpp \
    KittyMemory/MemoryPatch.cpp \
    KittyMemory/MemoryBackup.cpp \
    And64InlineHook/And64InlineHook.cpp

# ── Dobby source 
LOCAL_SRC_FILES += $(call all-cpp-files-under, Dobby/source)

# ── Static libs ──
LOCAL_STATIC_LIBRARIES := keystone

include $(BUILD_SHARED_LIBRARY)